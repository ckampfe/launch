<section class="row">
  <section class="column">
    <button phx-click="toggle-fs-polling">
      <%= if @timer do %>
        Stop polling
      <% else %>
        Start polling
      <% end %>
    </button>

    <table>
      <thead>
        <tr>
          <th>pid</th>
          <th>status</th>
          <th>label</th>
          <th>filename</th>
        </tr>
      </thead>
      <tbody>
      <%= for %{filename: file, pid: pid, status: status, label: label} <- @launchd_files do %>
        <tr>
          <td>
            <%= pid %>
          </td>
          <td>
            <%= status %>
          </td>
          <td>
            <a href="#" phx-click="inspect-file" phx-value-filename=<%= file %>><%= file %></a>
          </td>
          <td>
            <%= file %>
          </td>
        </tr>
        <%= if file_data = Map.get(@unfold_map, file) do %>
        <tr>
          <td colspan="4">
            <pre><code>
            <%= file_data %>
            </code></pre>
          </td>
        </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </section>
</section>
